{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/hyper-schema",
  "name": "Payment Card Resource",
  "description": "A resource representing a payment card.",
  "id": "payment-card:v1",
  "required": false,
  "properties": {
    "id": {
      "type": "string",
      "required": false,
      "readonly": true,
      "description": "ID of the payment card being saved for later use."
    },
    "card_number": {
      "type": "string",
      "required": false,
      "description": "Card number."
    },
    "card_number_lastN": {
      "type": "string",
      "required": false,
      "description": "Card number last N digits."
    },
    "type": {
      "type": "string",
      "required": true,
      "description": "Type of the Card (eg. Visa, Mastercard, etc.)."
    },
    "issuer_name": {
      "type": "string",
      "required": false,
      "description": "Name of the card issuing network."
    },
    "expire_month": {
      "type": "integer",
      "required": false,
      "description": "2 digit card expiry month."
    },
    "expire_year": {
      "type": "integer",
      "required": false,
      "description": "4 digit card expiry year."
    },
    "date_of_birth": {
      "type": "object",
      "required": false,
      "description": "Date of birth",
      "properties": {
        "date": {
          "type": "integer",
          "required": false,
          "description": "2 digit date(DOB)."
        },
        "month": {
          "type": "integer",
          "required": false,
          "description": "2 digit month(DOB)."
        },
        "year": {
          "type": "integer",
          "required": false,
          "description": "2 digit year(DOB)."
        }
      }
    },
    "cvv2": {
      "type": "integer",
      "required": false,
      "description": "Card validation code."
    },
    "first_name": {
      "type": "string",
      "required": false,
      "description": "Card holder's first name."
    },
    "last_name": {
      "type": "string",
      "required": false,
      "description": "Card holder's last name."
    },
    "billing_address": {
      "type": "object",
      "required": true,
      "description": "Billing Address associated with this card.",
      "properties": {
        "id": {
          "type": "string",
          "required": false,
          "description": "Address id."
        },
        "address": {
          "type": "object",
          "required": false,
          "$ref": "address.json"
        }
      }
    },
    "status": {
      "type": "object",
      "description": "State of the funding instrument.",
      "readonly": true,
      "required": false,
      "properties": {
        "value": {
          "type": "string",
          "enum": [
            "active",
            "inactive",
            "on_hold",
            "blocked"
          ],
          "description": "Current state value of the card."
        },
        "reason_code": {
          "type": "string",
          "enum": [
            "not_applicable",
            "soft_business_shutdown",
            "hard_business_shutdown",
            "nearing_expiry",
            "expired",
            "pending_confirmation",
            "pending_authorization"
          ],
          "description": "Reason code for card state."
        }
      }
    },
    "confirmation_status": {
      "type": "string",
      "description": "Confirmation status of a card.",
      "readonly": true,
      "required": false,
      "enum": [
        "unconfirmed",
        "confirmed",
        "failed",
        "blocked",
        "not_applicable",
        "not_supported"
      ]
    },
    "authorization_status": {
      "type": "string",
      "readonly": true,
      "required": false,
      "enum": [
        "not_supported",
        "not_applicable",
        "authorized",
        "unauthorized",
        "failed",
        "blocked"
      ],
      "description": "Authorization status of a card."
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "http://json-schema.org/draft-03/links#"
      }
    }
  },
  "links": [{
    "rel": "initiate_confirmation_pp_code",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/initiate-confirmation/paypal-code",
    "method": "POST"
  }, {
    "rel": "reinitiate_confirmation_pp_code",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/reinitiate-confirmation/paypal-code",
    "method": "POST"
  }, {
    "rel": "complete_confirmation_pp_code",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/complete-confirmation/paypal-code",
    "method": "POST"
  }, {
    "rel": "initiate_confirmation_single_charge",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/initiate-confirmation/single-charge",
    "method": "POST"
  }, {
    "rel": "reinitiate_confirmation_single_charge",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/reinitiate-confirmation/single-charge",
    "method": "POST"
  }, {
    "rel": "complete_confirmation_single_charge",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/complete-confirmation/single-charge",
    "method": "POST"
  }, {
    "rel": "initiate_confirmation_double_charge",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/initiate-confirmation/double-charge",
    "method": "POST"
  }, {
    "rel": "reinitiate_confirmation_double_charge",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/reinitiate-confirmation/double-charge",
    "method": "POST"
  }, {
    "rel": "complete_confirmation_double_charge",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/complete-confirmation/double-charge",
    "method": "POST"
  }, {
    "rel": "initiate_confirmation_double_charge",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/initiate-confirmation/double-charge",
    "method": "POST"
  }, {
    "rel": "reinitiate_confirmation_double_charge",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/reinitiate-confirmation/double-charge",
    "method": "POST"
  }, {
    "rel": "complete_confirmation_double_charge",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/complete-confirmation/double-charge",
    "method": "POST"
  }, {
    "rel": "initiate_confirmation_trusted",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/initiate-confirmation/trusted",
    "method": "POST"
  }, {
    "rel": "reinitiate_confirmation_trusted",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/reinitiate-confirmation/trusted",
    "method": "POST"
  }, {
    "rel": "complete_confirmation_trusted",
    "href": "/v1/wallet/{user-id}/financial-instruments/payment-cards/{id}/complete-confirmation/trusted",
    "method": "POST"
  }]
}