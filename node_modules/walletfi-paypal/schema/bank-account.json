{
  "type": "object",
  "name": "Bank Account Resource",
  "$schema": "http://json-schema.org/draft-03/hyper-schema",
  "description": "A resource representing a bank account.",
  "properties": {
    "id": {
      "type": "string",
      "required": false,
      "readonly": true,
      "description": "ID of the bank account being saved for later use."
    },
    "account_number": {
      "type": "string",
      "required": false,
      "description": "Bank Account Number."
    },
    "account_number_lastN": {
      "type": "string",
      "required": false,
      "description": "Last N digits of bank account number."
    },
    "first_name": {
      "type": "string",
      "required": false,
      "description": "Account holder's first name."
    },
    "last_name": {
      "type": "string",
      "required": false,
      "description": "Account holder's last name."
    },
    "type": {
      "type": "string",
      "required": true,
      "description": "Bank account type.",
      "enum": [
        "Unknown",
        "Savings",
        "Checking",
        "business_savings",
        "business_checking",
        "normal",
        "custom"
      ]
    },
    "currency": {
      "type": "string",
      "required": false,
      "description": "ISO 4217 3-character currency code."
    },
    "bank_details": {
      "type": "object",
      "description": "Bank Details.",
      "required": true,
      "properties": {
        "bank_name": {
          "type": "string",
          "required": false,
          "description": "Name of the financial institution."
        },
        "routing_number_1": {
          "type": "string",
          "required": true,
          "description": "Bank Routing Number 1."
        },
        "routing_number_2": {
          "type": "string",
          "required": false,
          "description": "Bank Routing Number 2."
        },
        "routing_number_3": {
          "type": "string",
          "required": false,
          "description": "Bank Routing Number 3."
        },
        "bank_code": {
          "type": "string",
          "required": false,
          "description": "This field contains the bank code."
        },
        "branch_code": {
          "type": "string",
          "required": false,
          "description": "This field contains the branch code ( used by Spain)."
        },
        "branch_location": {
          "name": {
            "type": "string",
            "required": false,
            "description": "The location of the bank branch e.g. a city or district name."
          },
          "city": {
            "type": "string",
            "required": false,
            "description": "contains bank city."
          },
          "country": {
            "type": "string",
            "required": false,
            "description": "ISO 3166-1 two-character country code."
          }
        }
      }
    },
    "status": {
      "type": "object",
      "description": "Status of the funding instrument.",
      "readonly": true,
      "required": false,
      "properties": {
        "value": {
          "type": "string",
          "enum": [
            "active",
            "inactive",
            "on_hold",
            "blocked"
          ],
          "description": "Current state value of the bank account."
        },
        "reason_code": {
          "type": "string",
          "enum": [
            "not_applicable",
            "soft_business_shutdown",
            "hard_business_shutdown",
            "expired",
            "pending_confirmation",
            "pending_authorization"
          ],
          "description": "Reason code for bank account state."
        }
      }
    },
    "confirmation_status": {
      "type": "string",
      "description": "Confirmation status of a bank account.",
      "readonly": true,
      "required": false,
      "enum": [
        "unconfirmed",
        "confirmed",
        "failed",
        "blocked",
        "not_applicable",
        "not_supported"
      ]
    },
    "authorization_status": {
      "type": "string",
      "readonly": true,
      "required": false,
      "enum": [
        "not_supported",
        "not_applicable",
        "authorized",
        "unauthorized",
        "failed",
        "blocked"
      ],
      "description": "Authorization status of a bank account."
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "http://json-schema.org/draft-03/links#"
      }
    }
  },
  "links": [{
    "rel": "initiate_confirmation_pp_code",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/initiate-confirmation/paypal-code",
    "method": "POST"
  }, {
    "rel": "reinitiate_confirmation_pp_code",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/reinitiate-confirmation/paypal-code",
    "method": "POST"
  }, {
    "rel": "complete_confirmation_pp_code",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/complete-confirmation/paypal-code",
    "method": "POST"
  }, {
    "rel": "initiate_confirmation_yodlee",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/initiate-confirmation/yodlee",
    "method": "POST"
  }, {
    "rel": "reinitiate_confirmation_yodlee",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/reinitiate-confirmation/yodlee",
    "method": "POST"
  }, {
    "rel": "complete_confirmation_yodlee",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/complete-confirmation/yodlee",
    "method": "POST"
  }, {
    "rel": "initiate_confirmation_double_deposit",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/initiate-confirmation/double-deposit",
    "method": "POST"
  }, {
    "rel": "reinitiate_confirmation_double_deposit",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/reinitiate-confirmation/double-deposit",
    "method": "POST"
  }, {
    "rel": "complete_confirmation_double_deposit",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/complete-confirmation/double-deposit",
    "method": "POST"
  }, {
    "rel": "initiate_confirmation_trusted",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/initiate-confirmation/trusted",
    "method": "POST"
  }, {
    "rel": "reinitiate_confirmation_trusted",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/reinitiate-confirmation/trusted",
    "method": "POST"
  }, {
    "rel": "complete_confirmation_trusted",
    "href": "/v1/wallet/{user-id}/financial-instruments/bank-accounts/{id}/complete-confirmation/trusted",
    "method": "POST"
  }]
}