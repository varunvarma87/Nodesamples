REPORTER = spec

BASE = .

JSHINT = ./node_modules/.bin/jshint

lint:
	$(JSHINT) ./index.js --config $(BASE)/.jshintrc && \
	$(JSHINT) ./cluster.js --config $(BASE)/.jshintrc && \
	$(JSHINT) ./lib --config $(BASE)/.jshintrc && \
	$(JSHINT) ./test $(BASE)/.jshintrc

test:
	@NODE_ENV=test ./node_modules/.bin/mocha \
		--require assert \
		--reporter $(REPORTER) \
		--timeout 60000

.PHONY: test
